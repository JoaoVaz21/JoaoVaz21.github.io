// Styling for the masthead
header.masthead {
  text-align: center;
  color: white;
  background-image: url("#{$header-image}");
  background-repeat: no-repeat;
  background-attachment: scroll;
  background-position: center center;
  background-size: cover;
  .intro-text {
    padding-top: 0px;
    padding-bottom: 100px;
    .intro-lead-in {
      font-size: 22px;
      font-style: italic;
      line-height: 22px;
      margin-bottom: 25px;
      @include serif-font;
    }
    .intro-heading {
      font-size: 50px;
      font-weight: 700px;
      line-height: 50px;
      margin-bottom: 25px;
      @include heading-font;
    }
  }
}
@media (min-width: 100px) {
  header.masthead {
    .intro-text {
      padding-top: 300px;
      padding-bottom: 200px;
      .intro-lead-in {
        font-size: 72px;
        font-style: italic;
        line-height: 72px;
        margin-bottom: 25px;
        @include serif-font;
      }
      .intro-heading {
        font-size: 12px;
        font-weight: 700;
        line-height: 12px;
        margin-bottom: 50px;
        @include serif-font;
      }
	  img {
		width: 128px;
		height: 128px;
		border: 7px solid fade-out($black, 0.9);
	  }
    }
  }
}
